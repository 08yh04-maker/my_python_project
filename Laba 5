import tkinter as tk
from tkinter import messagebox

def exit_app():
    if messagebox.askokcancel("Выход", "Вы уверены, что хотите выйти?"):
        root.destroy()

def about():
    messagebox.showinfo("О программе", "Программа с меню\nВариант 2")

root = tk.Tk()
root.title("Программа с меню")
root.geometry("400x300")

# Создаем главное меню
menubar = tk.Menu(root)

# Меню File
file_menu = tk.Menu(menubar, tearoff=0)
file_menu.add_command(label="Новый")
file_menu.add_command(label="Открыть")
file_menu.add_separator()
file_menu.add_command(label="Выход", command=exit_app)
menubar.add_cascade(label="Файл", menu=file_menu)

# Меню Help
help_menu = tk.Menu(menubar, tearoff=0)
help_menu.add_command(label="О программе", command=about)
menubar.add_cascade(label="Помощь", menu=help_menu)

# Устанавливаем меню
root.config(menu=menubar)

# Основное содержимое
content_label = tk.Label(root, text="Добро пожаловать в программу с меню!", 
                        font=("Arial", 14))
content_label.pack(expand=True)

root.mainloop()
