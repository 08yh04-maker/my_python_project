"""
Основная программа с пользовательским вводом
"""
import math_operations as mo

print("=== Лабораторная работа №2 ===")
print("Программа с пользовательским вводом:\n")

# 1. Сумма нечётных чисел - запрос у пользователя
try:
    n1 = int(input("Введите число N для суммы нечётных чисел: "))
    print(f"Сумма нечётных чисел до {n1}: {mo.sum_odd_numbers(n1)}")
except ValueError:
    print("Ошибка! Введите целое число.")

# 2. НОД - запрос двух чисел
try:
    a = int(input("\nВведите первое число для НОД: "))
    b = int(input("Введите второе число для НОД: "))
    print(f"НОД({a},{b}):")
    print(f"  Простой метод: {mo.gcd_simple(a, b)}")
    print(f"  Алгоритм Евклида: {mo.gcd_euclidean(a, b)}")
except ValueError:
    print("Ошибка! Введите целые числа.")

# 3. Подсчёт гласных - запрос текста
text = input("\nВведите текст для подсчёта гласных: ")
print(f"Гласных в тексте: {mo.count_vowels(text)}")


"""
Модуль с математическими операциями
"""

def sum_odd_numbers(n):
    """Сумма нечётных чисел до N"""
    total = 0
    for i in range(1, n + 1):
        if i % 2 != 0:
            total += i
    return total

def gcd_simple(a, b):
    """НОД простым методом (перебор делителей)"""
    a, b = abs(a), abs(b)
    if a == 0:
        return b
    if b == 0:
        return a
    
    smaller = min(a, b)
    gcd = 1
    for i in range(1, smaller + 1):
        if a % i == 0 and b % i == 0:
            gcd = i
    return gcd

def gcd_euclidean(a, b):
    """НОД алгоритмом Евклида"""
    a, b = abs(a), abs(b)
    while b != 0:
        a, b = b, a % b
    return a

def count_vowels(text):
    """Подсчёт гласных букв в тексте"""
    vowels = "аеёиоуыэюяaeiou"
    count = 0
    for char in text.lower():
        if char in vowels:
            count += 1
    return count
