class Student:
    def __init__(self, name, student_id, major):
        self._name = name
        self._student_id = student_id
        self._major = major

    def display_info(self):
        print(f"\n=== Информация о студенте ===")
        print(f"Студент: {self._name}")
        print(f"ID: {self._student_id}")
        print(f"Специальность: {self._major}")

def main():
    print("=== ЗАДАНИЕ 1: КЛАСС 'СТУДЕНТ' ===")
    
    students = []
    
    while True:
        print("\n--- Создание нового студента ---")
        name = input("Введите ФИО студента: ")
        student_id = input("Введите ID студента: ")
        major = input("Введите специальность: ")
        
        student = Student(name, student_id, major)
        students.append(student)
        
        print("\n✅ Студент создан!")
        student.display_info()
        
        choice = input("\nСоздать еще одного студента? (да/нет): ").lower()
        if choice != 'да':
            break
    
    print(f"\n=== ИТОГО: создано {len(students)} студентов ===")
    for i, student in enumerate(students, 1):
        print(f"\nСтудент #{i}:")
        student.display_info()

if __name__ == "__main__":
    main()
