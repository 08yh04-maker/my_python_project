from abc import ABC, abstractmethod

class Notification(ABC):
    @abstractmethod
    def send(self, message):
        pass

class EmailNotification(Notification):
    def send(self, message):
        return f"üìß Email –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω: '{message}'"

class SMSNotification(Notification):
    def send(self, message):
        return f"üì± SMS –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω–æ: '{message}'"

class PushNotification(Notification):
    def send(self, message):
        return f"üîî Push-—É–≤–µ–¥–æ–º–ª–µ–Ω–∏–µ –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω–æ: '{message}'"

class NotificationFactory:
    @staticmethod
    def create_notification(notification_type):
        if notification_type == "email":
            return EmailNotification()
        elif notification_type == "sms":
            return SMSNotification()
        elif notification_type == "push":
            return PushNotification()
        else:
            raise ValueError(f"–ù–µ–∏–∑–≤–µ—Å—Ç–Ω—ã–π —Ç–∏–ø —É–≤–µ–¥–æ–º–ª–µ–Ω–∏—è: {notification_type}")

def main():
    print("=== –ó–ê–î–ê–ù–ò–ï 4: –ü–ê–¢–¢–ï–†–ù FACTORY ===")
    
    notifications = []
    
    while True:
        print("\n" + "="*40)
        print("–°–ò–°–¢–ï–ú–ê –£–í–ï–î–û–ú–õ–ï–ù–ò–ô")
        print("="*40)
        print("1 - –û—Ç–ø—Ä–∞–≤–∏—Ç—å Email")
        print("2 - –û—Ç–ø—Ä–∞–≤–∏—Ç—å SMS")
        print("3 - –û—Ç–ø—Ä–∞–≤–∏—Ç—å Push-—É–≤–µ–¥–æ–º–ª–µ–Ω–∏–µ")
        print("4 - –ü–æ–∫–∞–∑–∞—Ç—å –∏—Å—Ç–æ—Ä–∏—é –æ—Ç–ø—Ä–∞–≤–æ–∫")
        print("5 - –í—ã—Ö–æ–¥")
        
        choice = input("–í—ã–±–µ—Ä–∏—Ç–µ –¥–µ–π—Å—Ç–≤–∏–µ (1-5): ")
        
        if choice == '5':
            break
        elif choice == '4':
            if notifications:
                print("\nüìã –ò–°–¢–û–†–ò–Ø –û–¢–ü–†–ê–í–û–ö:")
                for i, notif in enumerate(notifications, 1):
                    print(f"{i}. {notif}")
            else:
                print("üì≠ –ò—Å—Ç–æ—Ä–∏—è –æ—Ç–ø—Ä–∞–≤–æ–∫ –ø—É—Å—Ç–∞.")
            continue
        
        if choice in ['1', '2', '3']:
            message = input("–í–≤–µ–¥–∏—Ç–µ —Å–æ–æ–±—â–µ–Ω–∏–µ –¥–ª—è –æ—Ç–ø—Ä–∞–≤–∫–∏: ")
            
            notification_types = {
                '1': 'email',
                '2': 'sms', 
                '3': 'push'
            }
            
            try:
                notification = NotificationFactory.create_notification(notification_types[choice])
                result = notification.send(message)
                notifications.append(result)
                print(f"‚úÖ {result}")
            except ValueError as e:
                print(f"‚ùå {e}")
        else:
            print("‚ùå –ù–µ–≤–µ—Ä–Ω—ã–π –≤—ã–±–æ—Ä!")
    
    print(f"\n=== –ò–¢–û–ì–û: –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω–æ {len(notifications)} —É–≤–µ–¥–æ–º–ª–µ–Ω–∏–π ===")

if __name__ == "__main__":
    main()
