from medium.student import Student, create_student_from_input
from medium.shape import create_shape_from_input
from medium.vector import create_vector_from_input
from advanced.factory_pattern import send_notifications_interactive
from advanced.smart_list import interactive_smart_list

def main():
    while True:
        print("\n" + "="*50)
        print("ЛАБОРАТОРНАЯ РАБОТА №3 - ООП НА PYTHON")
        print("="*50)
        print("1 - Класс 'Студент'")
        print("2 - Класс 'Фигура'")
        print("3 - Перегрузка оператора + (Вектор)")
        print("4 - Паттерн Factory (Уведомления)")
        print("5 - Умный список (SmartList)")
        print("0 - Выход")
        
        choice = input("Выберите задание (0-5): ").strip()
        
        if choice == '0':
            print("Выход из программы...")
            break
        elif choice == '1':
            
            student = create_student_from_input()
            student.display_info()
        elif choice == '2':
         
            shape = create_shape_from_input()
            if shape:
                print(f"Площадь: {shape.area():.2f}")
                print(f"Периметр: {shape.perimeter():.2f}")
        elif choice == '3':

            print("Создадим два вектора для сложения:")
            from medium.vector import Vector
            v1 = create_vector_from_input("v1")
            v2 = create_vector_from_input("v2")
            v3 = v1 + v2
            print(f"Результат: {v3}")
        elif choice == '4':
       
            send_notifications_interactive()
        elif choice == '5':
  
            interactive_smart_list()
        else:
            print("Неверный выбор!")

if __name__ == "__main__":
    main()
